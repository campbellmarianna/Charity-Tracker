<!--views/donation-edit.handlebars -->
<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <form method="POST" action="/donations/{{donation._id}}?_method=PUT">
          <fieldset>
            <legend>Edit Donation</legend>
            {{> donations-form}}
          </fieldset>

          <!-- SUBMIT BUTTON -->
          <div class="form-group">
            <button class="btn btn-primary" type="submit">Save Donation</button>
          </div>
        </form>
        <!-- CANCEL LINK -->
        <a href="/">Cancel</a>
    </div>
</div>
